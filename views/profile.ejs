    <script>
        $(document).ready(function(){
            $('#OpenImgUpload1').click(function(){ 
                $('#imgupload1').trigger('click');
                $("#imgupload1").change(function(){
                     var filename = $(this).val();
                     // alert(filename);
                     if(filename == null)
                    {
                          setTimeout(function(){
                          alert("Select an image for your display picture!");
                        }, 5000);     
                    }
                    else
                    {
                        $('#img1').trigger('click');
                    }  
                });   
                  
            });
            $('#OpenImgUpload2').click(function(){
                 $('#imgupload2').trigger('click');
                 $("#imgupload2").change(function(){
                     var filename = $(this).val();
                    // alert(filename);
                     if(filename == null)
                    {
                          setTimeout(function(){
                          alert("Select an image for your display picture!");
                        }, 5000);     
                    }
                    else
                    {
                        $('#img2').trigger('click');
                    }  
                });      
             });

            $('span').removeClass('first-icon fa fa-circle-o fa-base');
            $('span').removeClass('second-icon fa fa-dot-circle-o fa-base');
            
        });
    </script>
